<% if @user.articles.count > 0 %>
  <% unless @user == current_user%>
    <% title= "Articles by " + @user.name.capitalize()%>
    <%= render 'shared/page_title', title: @user.name.capitalize()+"'s Articles" %>
  <%else%>
    <%= render 'shared/page_title', title: "Your articles"%>
  <%end%>
  <%= render 'articles/articles_list', obj: @articles%>
<% else %>
<%= render 'shared/page_title', title: "Your articles"%>
  <div class="row justify-content-center">
    <div class= "col-md-4">
      <div class= "card-title">
      <h2 class="mt-2 mb-2"> Create your first article</h2>
      <%= link_to 'New Article', new_article_path, class:"btn btn-info btn-sm" %>
      </div>
    </div>
  </div>
<% end %>

