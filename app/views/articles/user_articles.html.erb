
<% if @user.articles.count > 0 %>
  <% unless @user == current_user%>
    <h2 class="mt-4 mb-2 "> Articles by <%= @user.name.capitalize()%> </h2>
  <%else%>
    <h2 class="mt-4 mb-2 "> Your articles </h2>
  <%end%>
  <%= render 'articles/articles_list', obj: @articles%>
<% else %>
  <div class= "card-body">
    <div class= "card-title">

    <h2 class="mt-2 mb-2 "> Create your first article</h2>
    <%= link_to 'New Article', new_article_path, class:"btn btn-info btn-sm" %>
    </div>
  </div>
<% end %>

